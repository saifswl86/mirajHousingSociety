<div class="row ann_bg">
        <div class="col-3"></div>
        <div class="col-6 ann-simple">
          {%if section.settings.title!=blank%}
            <div class="w-100">
                <p class="text-center ann-title">
                    {{section.settings.title}}
                </p>
            </div>
          {%endif%}
          {%if section.blocks!=blank%}
            <div class="ann py-0">
              {%for block in section.blocks%}
                {%if block.settings.announcement!=blank%}
                  <div class="ann_item py-0">
                      <div class="ann_cmnt py-0">
                        <p>{{block.settings.announcement}}</p>
                      </div>
                  </div>
                {%endif%}
              {%endfor%}
            </div>
          {%endif%}
        </div>
        <div class="col-3"></div>
    </div>

{% schema %}
  {
    "name": "Announcements",
    "settings": [
		{
			"type":"text",
			"label":"Title",
			"id":"title"
		},
		{
			"type":"image_picker",
			"label":"Choose background image",
			"id":"bg_image"
		}
	],
	"blocks":[
	{
		"type":"announcement",
		"name":"Announcement",
		"settings":[
			{
				"type":"textarea",
				"label":"Announcement",
				"id":"announcement"
			}]}
	],
	"presets":[
		{
			"name":"Announcements Slider"
		}
	]
  }
{% endschema %}

