    slidesToScroll: 1,
    prevArrow:'<button class="slick-prev glry-cstm-prev-icon"><img src="https://cdn.shopify.com/s/files/1/0593/1987/7820/files/Lt-Circle.svg?v=1636530315" width="30" height="30"></button>',
    nextArrow:'<button class="slick-next glry-cstm-next-icon"><img src="https://cdn.shopify.com/s/files/1/0593/1987/7820/files/rt-circle.svg?v=1636530315" width="30" height="30"></button>',
    responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 4,
		    slidesToScroll: 1
        }
      },
      {
        breakpoint: 768,
        settings: {
