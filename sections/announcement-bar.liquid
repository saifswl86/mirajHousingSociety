{% if section.settings.announcement_check == true %}
 
<div class="announcement-bar row">
  <div class="announcement_Text col-6 col-lg-4 ">
    {%if section.settings.announcement_text_check==true%}
      {%if section.settings.announcement_Text!=blank%}
          {%if section.settings.announcement_link!=blank%}
            <a href="section.settings.announcement-bar-link">
          {%endif%}
              <p>{{section.settings.announcement_Text}}</p>
          {%if section.settings.announcement_link!=blank%}
              </a>
          {%endif%}
      {%endif%}
    {%endif%}
  </div>
  <div class="icon-with-text col-6 col-lg-4 d-flex justify-content-lg-center align-items-center"> 
    
      {%if section.blocks!=blank%}
            {%for block in section.blocks%}
                <div class="icon-with-text-item d-flex">
                    {%if block.settings.announcement-bar-whatsapp!=blank%}
                      <a class="d-flex announcement-bar-icon-text justify-content-between align-items-center" href="{{block.settings.announcement-bar-icon-link}}">
                    {%endif%}
                    {%if block.settings.annoucement-bar-icon!=blank%}
                        <img class="annoucement-bar-icon" src="{{block.settings.annoucement-bar-icon | img_url:'master'}}">
                    {%endif%}
                      <p class="">{{block.settings.announcement-bar-icon-text}}</p>
                    {%if section.settings.announcement-bar-icon-link!=blank%}
                      </a>
                    {%endif%}
                </div>
            {%endfor%}
      {%endif%}
  </div> 
  <div class="announce-sm-icons col-6 col-lg-4 d-flex justify-content-end align-items-center">
    {%if section.settings.announcement_sm_check==true %}
    
      {%comment%}
      {%if section.settings.sm_link_email!=blank%}
      <div class="sm_link_email">
        <a href="{{section.settings.sm_link_email}}">
          <img src="https://cdn.shopify.com/s/files/1/0593/1987/7820/files/Email.svg?v=1634108379" width="20" height="21">
        </a> 
      </div>
      {%endif%}
      {%if section.settings.sm_link_facebook!=blank%}
      <div class="sm_link_facebook">
        <a href="{{section.settings.ssm_link_facebook}}">
          <img src="https://cdn.shopify.com/s/files/1/0593/1987/7820/files/facebook-app-symbol.svg?v=1634108379" width="20" height="21">
        </a>
      </div>
      {%endif%}
      {%if section.settings.sm_link_youtube!=blank%}
      <div class="sm_link_youtube">
        <a href="{{section.settings.sm_link_youtube}}">
          <img src="https://cdn.shopify.com/s/files/1/0593/1987/7820/files/YouTube.svg?v=1634108379" width="20" height="21">
        </a>
      </div> 
      {%endif%}   
      {%if section.settings.sm_link_twitter!=blank%}
      <div class="sm_link_twitter">
        <a href="{{section.settings.sm_link_twitter}}">
          <img src="https://cdn.shopify.com/s/files/1/0593/1987/7820/files/Twitter.svg?v=1634108379" width="20" height="21">
        </a>
      </div>
      {%endif%}
      {%if section.settings.sm_link_instagram!=blank%}
      <div class="sm_link_instagram">
        <a href="{{section.settings.sm_link_instagram}}">
          <img src="https://cdn.shopify.com/s/files/1/0593/1987/7820/files/Twitter.svg?v=1634108379" width="20" height="21">
        </a>
      </div>
      {%endif%}
      {%endcomment%}
    
      <ul class="footer__list-social list-unstyled list-social" role="list">
            {%- if settings.social_twitter_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_twitter_link }}" class="link list-social__link" >
                  {%- render 'icon-twitter' -%}
                  <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
                </a>
              </li>
            {%- endif -%}
            {%- if settings.social_facebook_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_facebook_link }}" class="link list-social__link" >
                  {%- render 'icon-facebook' -%}
                  <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
                </a>
              </li>
            {%- endif -%}
            {%- if settings.social_pinterest_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_pinterest_link }}" class="link list-social__link" >
                  {%- render 'icon-pinterest' -%}
                  <span class="visually-hidden">{{ 'general.social.links.pinterest' | t }}</span>
                </a>
              </li>
            {%- endif -%}
            {%- if settings.social_instagram_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_instagram_link }}" class="link list-social__link" >
                  {%- render 'icon-instagram' -%}
                  <span class="visually-hidden">{{ 'general.social.links.instagram' | t }}</span>
                </a>
              </li>
            {%- endif -%}
            {%- if settings.social_tiktok_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_tiktok_link }}" class="link list-social__link" >
                  {%- render 'icon-tiktok' -%}
                  <span class="visually-hidden">{{ 'general.social.links.tiktok' | t }}</span>
                </a>
              </li>
            {%- endif -%}
            {%- if settings.social_tumblr_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_tumblr_link }}" class="link list-social__link" >
                  {%- render 'icon-tumblr' -%}
                  <span class="visually-hidden">{{ 'general.social.links.tumblr' | t }}</span>
                </a>
              </li>
            {%- endif -%}
            {%- if settings.social_snapchat_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_snapchat_link }}" class="link list-social__link" >
                  {%- render 'icon-snapchat' -%}
                  <span class="visually-hidden">{{ 'general.social.links.snapchat' | t }}</span>
                </a>
              </li>
            {%- endif -%}
            {%- if settings.social_youtube_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_youtube_link }}" class="link list-social__link" >
                  {%- render 'icon-youtube' -%}
                  <span class="visually-hidden">{{ 'general.social.links.youtube' | t }}</span>
                </a>
              </li>
            {%- endif -%}
            {%- if settings.social_vimeo_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_vimeo_link }}" class="link list-social__link" >
                  {%- render 'icon-vimeo' -%}
                  <span class="visually-hidden">{{ 'general.social.links.vimeo' | t }}</span>
                </a>
              </li>
            {%- endif -%}
          </ul>
    {%endif%}
  </div>
</div>
{%endif%}

{%style%}
.announcement-bar{
  background-color:{{section.settings.announcementbar_bg_color}};
}
.announcement-bar *{
  color:{{section.settings.announcementbar_text_color}};
}

{%endstyle%}
{% schema %}

{
  "name":"Announcement Bar",
  "settings":[
    {
      "type": "header",
      "content": "Announcement Bar"
    },
    {
      "type": "checkbox",
      "id": "announcement_check",
      "label": "Show announcement",
      "default": true,
      "info": "Check if you want to show annoucemment bar"
    },
    {
      "type": "header",
      "content": "Announcement Bar Details"
    },
    {
      "type": "checkbox",
      "id": "announcement_text_check",
      "label": "Show announcement Text",
      "default": false,
      "info": "Check if you want to show annoucemment bar text"
    },
    {
      "type": "text",
      "id": "announcement_Text",
      "label": "Announcement Text",
      "info": "Add text for annoucement"
    },
    {
      "type": "text",
      "id": "announcement_link",
      "label": "Link",
      "info": "Add link to announcemnet bar",
      "placeholder": "www.mirajhousingsociety.com"
    },
    {
      "type": "header",
      "content": "Announcement Bar Color Scheme"
    },
    {
      "type": "checkbox",
      "id": "announcement_sm_check",
      "label": "Show Social Icons",
      "default": true,
      "info": "Check if you want to show annoucemment bar"
    },
    {
      "type": "color",
      "id": "announcementbar_bg_color",
      "label": "Background Color",
      "default": "#f5f5f5",
      "info": "Set background color for announcement bar"
    },
    {
      "type": "color",
      "id": "announcementbar_text_color",
      "label": "Text Color Color",
      "default": "#000",
      "info": "Set Text color for announcement bar"
    },
    {
      "type": "header",
      "content": "Social Media Links"
    },
    {
      "type": "text",
      "id": "sm_link_email",
      "label": "Email",
      "info": "example@email.com"
    },  
  {
    "type": "text",
    "id": "sm_link_facebook",
    "label": "Facebook",
    "info": "www.facebook.com"
  },
  {
    "type": "text",
    "id": "sm_link_youtube",
    "label": "YouTube",
    "info": "www.youtube.com"
  },
  {
    "type": "text",
    "id": "sm_link_twitter",
    "label": "Twitter",
    "info": "www.twitter.com"
  },
  {
    "type": "text",
    "id": "sm_link_instagram",
    "label": "Instagram",
    "info": "www.instagram.com"
  }
  ],
  "blocks":[
  {
    "type":"announcement",
    "name":"Icon with Text",
    "settings":[
    {
      "type": "header",
      "content": "Icon With Text Settings"
    },
    {
      "type": "image_picker",
      "id": "annoucement-bar-icon",
      "label": "Icon",
      "info":"Select Icon image"
    },
    {
      "type": "text",
      "id": "announcement-bar-icon-text",
      "label": "Icon Text"
    },
    {
      "type": "text",
      "id": "announcement-bar-icon-link",
      "label": "Icon Link"
    }
      
    ]
  }
]}  
  
{% endschema %}