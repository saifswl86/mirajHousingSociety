{%if section.settings.title!=blank%}
<div class="cstm-projects">
  	{%if section.settings.title!=blank%}
    <h3 class="cstm-projects-title">
        {{section.settings.title}}
    </h3>
  	{%endif%}
  	{%if section.blocks!=blank%}
    <div class="projects-list">
      {%for block in section.blocks%}
        <div class="cstm-project-item">
          	{%if block.settings.project_image!=blank%}
            <div class="cstm-project-item-img">
            	<img src="{{block.settings.project_image|img_url:'master'}}">
          	</div>
          	{%endif%}
          
            <div class="cstm-project-item-text">
              {% if block.settings.project_text!=blank%}
              	{%if block.settings.button_link!=blank%}
              		<a href="{{block.settings.button_link}}" class="btn_link">
              	{%endif%}
              	  <h3>{{block.settings.project_text}}</h3>
				{%if block.settings.button_link!=blank%}
              		</a>
                {%endif%}
              {%endif%}
              {%if block.settings.project_desc!=blank%}
              	<p>{{block.settings.project_desc}}</p>
              {%endif%}
              {%if block.settings.button_text!=blank%}
                <a href="{{block.settings.button_link}}">{{block.settings.button_text}} <span><svg width="12" height="12" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12.042 20.999"><g transform="translate(-1735 -3896)"><g transform="translate(1735 3896)"><path d="M24.39,20.5l-7.95,7.95a1.425,1.425,0,0,0,.15,2.25,1.575,1.575,0,0,0,2.025-.15l8.925-9a1.425,1.425,0,0,0,0-2.1l-8.925-9a1.575,1.575,0,0,0-2.025-.15,1.425,1.425,0,0,0-.15,2.25Z" transform="translate(-15.959 -10.001)"/></g></g></svg></span></a>
              {%endif%}
          	</div>
        </div>
      {%endfor%}
